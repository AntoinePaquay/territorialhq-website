@page
@model TerritorialHQ.Areas.Administration.Pages.Journal.PreviewModel
@{
    Layout = "_LayoutPreview";
}

<div class="absolute w-full h-[800px] -z-20" style="background-image: url('/img/stencil.png'); background-size: cover; background-position: top center">
</div>
<div class="absolute w-full h-[800px] -z-10" style="background-image: url('/img/stencil.png'); background-size: cover; background-position: top center">
</div>

<div class="container mx-auto z-0">
    <div class="flex mt-16 mb-6">
        <div class="basis-full lg:basis-2/3">
            <h1 class="text-[52px] text-slate-200">@Model.Article?.Title</h1>
            <h2 class="text-[28px] text-slate-400 mb-4">@Model.Article?.Subtitle</h2>
            <p class="text-lg text-slate-500 mb-5">@string.Format("{0:dddd, MMMM dd yyyy}", Model.Article?.PublishFrom) | by johndoe_23</p>
            <img src="/Data/Uploads/System/@(Model.Article?.Image)"/>
        </div>
    </div>
    <div class="flex flex-wrap lg:flex-nowrap">
        <div class="basis-full lg:basis-2/3 lg:pr-12 order-2 lg:order-1 flex pt-12">
            <div class="basis-24 pr-8">
                <div class="p-3 mb-4 bg-slate-500 rounded">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" class="main-grid-item-icon" fill="none">
