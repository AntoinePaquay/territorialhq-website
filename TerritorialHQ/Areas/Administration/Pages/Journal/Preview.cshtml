                </div>
            </div>
            <div class="basis-auto">
                <p class="text-2xl text-slate-200 mb-12 leading-8">
                    @Model.Article?.Teaser
                </p>
                <article class="mb-12 text-xl text-slate-400 leading-8">
                    @Html.Raw(Model.Article?.Body)
                </article>
            </div>
        </div>
        <div class="basis-full lg:basis-1/3 order-1 lg:order-2">
            
        </div>
    </div>

</div>

