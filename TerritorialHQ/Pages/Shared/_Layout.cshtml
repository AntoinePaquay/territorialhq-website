<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Territorial Headquarters</title>

    <link rel="stylesheet" href="~/css/reboot.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/elektra.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav>
            @await Component.InvokeAsync("Navigation")
        </nav>
    </header>
    <div class="container mx-auto pt-12">
        @RenderBody()
    </div>
    <div class="footer">
        <div class="container">
            <div class="pure-g">

                <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-2-5 mb-30">
                    <a href="~/">
                        <img src="~/img/TTHQ-Logo-Full-Wide.png" />
                    </a>
                </div>

                <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-5 mb-30">
                    <h2>Discord</h2>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="https://discord.com/invite/pthqvpTXmh" target="_blank">Official tt.io Server</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="https://discord.gg/uFWdU7qx8Q" target="_blank">tt.io Community Server</a>
                            </p>
                        </li>
                    </ul>
                </div>
                <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-5 mb-30">
                    <h2>Source Code</h2>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="https://github.com/territorialHQ/" target="_blank">TTHQ on GitHub</a>
                            </p>
                        </li>
                    </ul>
                </div>
                <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-5 mb-30">
                    <h2>Legal</h2>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="/contact/">Contact</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="/privacy/">Privacy</a>
                            </p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright">
        <div class="container">
            <div>
                <a href="#"><i class="icon icon-up-open-big" style="color: #CCC"></i></a>
                <span class="float-right font-size-12" style="color: #444">&copy; @DateTime.Today.Year TerritorialHQ </span>

            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/init-menu.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/discord-loader.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>